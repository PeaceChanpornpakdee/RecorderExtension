{
  "manifest_version": 3,
  "name": "Sound Recorder Extension",
  "version": "1.0",
  "description": "A Chrome extension for recording audio when 'btn-recording' element is detected.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "audioCapture"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}