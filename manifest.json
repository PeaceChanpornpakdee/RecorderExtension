{
  "manifest_version": 3,
  "name": "Sound Recorder Extension",
  "version": "1.0",
  "description": "A Chrome extension for recording audio when 'recorder-recording' element is detected.",
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}